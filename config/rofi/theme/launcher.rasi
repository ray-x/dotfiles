configuration {
  font: "JetBrainsMono Nerd Font 12";
  show-icons: true;
  icon-theme: "Papirus-Dark";
  drun-display-format: "{name}";
  disable-history: false;
  display-drun: "ï€‚ ";
  sidebar-mode: false;
}

* {
  bg0: #1A1B26FF;
  bg1: #24283BFF;
  fg0: #C0CAF5FF;

  accent-color: #7AA2F7FF;
  urgent-color: #F7768EFF;

  background-color: transparent;
  text-color: @fg0;

  margin: 0;
  padding: 0;
  spacing: 0;
}

window {
  location: center;
  width: 480;
  y-offset: -160;

  background-color: @bg0;
}

inputbar {
  spacing: 8px;
  padding: 8px;

  background-color: @bg1;
}

prompt,
entry,
element-icon,
element-text {
  vertical-align: 0.5;
}

prompt {
  text-color: @accent-color;
}

textbox {
  padding: 8px;
  background-color: @bg1;
}

listview {
  padding: 4px 0;
  lines: 8;
  columns: 1;

  fixed-height: false;
}

element {
  padding: 8px;
  spacing: 8px;
}

element normal normal {
  text-color: @fg0;
}

element normal urgent {
  text-color: @urgent-color;
}

element normal active {
  text-color: @accent-color;
}

element selected {
  text-color: @bg0;
}

element selected normal,
element selected active {
  background-color: @accent-color;
}

element selected urgent {
  background-color: @urgent-color;
}

element-icon {
  size: 0.8em;
}

element-text {
  text-color: inherit;
}
